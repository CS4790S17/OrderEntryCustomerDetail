@model IEnumerable<ViewModelTemplate.Models.OrderDetail>
@using ViewModelTemplate.Models

@{ string OrdNo = "None";
    if (Model.Count() != 0)
    {
        OrderDetail orderDetail = Model.First<OrderDetail>();
        OrdNo = orderDetail.OrdNo;
    } else
    {

    }
}
<span>Order Number: @OrdNo</span>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.ProdName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Qty)
        </th>
        <th style="text-align:right">
            @Html.DisplayNameFor(model => model.ProdPrice)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.ProdName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Qty)
        </td>
        <td style="text-align:right">
            @Html.DisplayFor(modelItem => item.ProdPrice)
        </td>
    </tr>
}

</table>
